<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="@string/ssids" >
        <SwitchPreference
            android:key="pref_deprecated_ssids"
            android:title="@string/pref_show_deprecated"
            android:defaultValue="false" />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/pref_notification" >
        <SwitchPreference
            android:key="pref_notification"
            android:title="@string/pref_notification"
            android:summary="@string/pref_notification_summ"
            android:defaultValue="false" />
        <SwitchPreference
            android:key="pref_no_notification_connected"
            android:title="@string/pref_no_notification_connected"
            android:summary="@string/pref_no_notification_connected_summ"
            android:defaultValue="true" />
        <SwitchPreference
            android:key="pref_notification_vibrate"
            android:title="@string/pref_notification_vibrate"
            android:defaultValue="true" />
        <SwitchPreference
            android:key="pref_notification_sound"
            android:title="@string/pref_notification_sound"
            android:defaultValue="false" />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/pref_nearest_ap" >
        <SwitchPreference
            android:key="pref_nearest_ap_show_offline_nodes"
            android:title="@string/pref_nearest_ap_offline"
            android:defaultValue="false" />
        <EditTextPreference
            android:key="pref_nearest_ap_number_nodes_string"
            android:title="@string/pref_nearest_ap_number"
            android:inputType="number"
            android:defaultValue="10" />

    </PreferenceCategory>
</PreferenceScreen>
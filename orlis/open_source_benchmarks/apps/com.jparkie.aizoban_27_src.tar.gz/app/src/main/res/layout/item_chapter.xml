<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/double_line_height">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/baseline_content_left"
        android:layout_marginStart="@dimen/baseline_content_left"
        android:layout_marginRight="@dimen/baseline_content_unit"
        android:layout_marginEnd="@dimen/baseline_content_unit">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:ellipsize="middle"
            android:singleLine="true"
            android:textColor="@color/primaryBlue500"
            android:textSize="@dimen/typography_subhead"
            android:textStyle="bold"
            android:id="@+id/nameTextView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameTextView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:singleLine="true"
            android:textColor="@color/secondaryText"
            android:textSize="@dimen/typography_body_1"
            android:textStyle="italic"
            android:id="@+id/dateTextView" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:layout_marginLeft="@dimen/baseline_content_unit"
        android:layout_marginStart="@dimen/baseline_content_unit"
        android:textColor="@color/primaryBlue500"
        android:textSize="@dimen/typography_caption"
        android:textStyle="bold|italic"
        android:text="@string/chapter_list_item_new"
        android:id="@+id/newTextView"/>

</FrameLayout>
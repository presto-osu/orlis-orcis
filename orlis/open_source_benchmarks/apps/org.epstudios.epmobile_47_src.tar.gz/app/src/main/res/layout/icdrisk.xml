<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <CheckBox
                android:id="@+id/female_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/female_sex_label" />

            <TextView
                style="@style/Header1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/admission_reason_label" />

            <RadioGroup
                android:id="@+id/admission_reason_radio_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/for_procedure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/for_procedure_label"></RadioButton>

                <RadioButton
                    android:id="@+id/for_heart_failure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/for_heart_failure_label"></RadioButton>

                <RadioButton
                    android:id="@+id/for_other_reason"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/other_label"></RadioButton>
            </RadioGroup>

            <TextView
                style="@style/Header1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nyha_class_label" />

            <RadioGroup
                android:id="@+id/nyha_class_radio_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/class_one_or_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/class_one_or_two_label"></RadioButton>

                <RadioButton
                    android:id="@+id/class_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/class_three_label"></RadioButton>

                <RadioButton
                    android:id="@+id/class_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/class_four_label"></RadioButton>
            </RadioGroup>

            <View style="@style/Divider" />

            <CheckBox
                android:id="@+id/no_prior_cabg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_prior_cabg_label" />

            <CheckBox
                android:id="@+id/current_dialysis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/current_dialysis_label" />

            <CheckBox
                android:id="@+id/chronic_lung_disease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chronic_lung_disease_label" />

            <TextView
                style="@style/Header1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/abnormal_conduction_label" />

            <RadioGroup
                android:id="@+id/abnormal_conduction_radio_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/no_abnormal_conduction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_abnormal_conduction_label"></RadioButton>

                <RadioButton
                    android:id="@+id/yes_lbbb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yes_lbbb_label"></RadioButton>

                <RadioButton
                    android:id="@+id/yes_other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yes_other_label"></RadioButton>
            </RadioGroup>

            <TextView
                style="@style/Header1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/procedure_type_label" />

            <RadioGroup
                android:id="@+id/procedure_type_radio_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/initial_implant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/initial_implant_label"></RadioButton>

                <RadioButton
                    android:id="@+id/generator_replacement_eri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/generator_replacement_eri_label"></RadioButton>

                <RadioButton
                    android:id="@+id/generator_replacement_infection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/generator_replacement_infection_label"></RadioButton>

                <RadioButton
                    android:id="@+id/generator_replacement_device_relocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/generator_replacement_device_relocation_label"></RadioButton>

                <RadioButton
                    android:id="@+id/generator_replacement_upgrade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/generator_replacement_upgrade_label"></RadioButton>

                <RadioButton
                    android:id="@+id/generator_replacement_malfunction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/generator_replacement_malfunction_label"></RadioButton>

                <RadioButton
                    android:id="@+id/generator_replacement_other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/generator_replacement_other_label"></RadioButton>
            </RadioGroup>

            <TextView
                style="@style/Header1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/icd_type_label" />

            <RadioGroup
                android:id="@+id/icd_type_radio_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/single_chamber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/single_chamber_label"></RadioButton>

                <RadioButton
                    android:id="@+id/dual_chamber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dual_chamber_label"></RadioButton>

                <RadioButton
                    android:id="@+id/crt_d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/crt_d_label"></RadioButton>
            </RadioGroup>

            <TextView
                style="@style/Header1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sodium_label" />

            <RadioGroup
                android:id="@+id/sodium_radio_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/low_sodium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/low_sodium_label"></RadioButton>

                <RadioButton
                    android:id="@+id/normal_sodium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/normal_sodium_label"></RadioButton>

                <RadioButton
                    android:id="@+id/high_sodium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/high_sodium_label"></RadioButton>
            </RadioGroup>

            <TextView
                style="@style/Header1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hgb_label" />

            <RadioGroup
                android:id="@+id/hgb_radio_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/low_hgb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/low_hgb_label"></RadioButton>

                <RadioButton
                    android:id="@+id/normal_hgb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/normal_hgb_label"></RadioButton>

                <RadioButton
                    android:id="@+id/high_hgb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/high_hgb_label"></RadioButton>
            </RadioGroup>

            <TextView
                style="@style/Header1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bun_label" />

            <RadioGroup
                android:id="@+id/bun_radio_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/low_bun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/low_bun_label"></RadioButton>

                <RadioButton
                    android:id="@+id/normal_bun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/normal_bun_label"></RadioButton>

                <RadioButton
                    android:id="@+id/high_bun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/high_bun_label"></RadioButton>
            </RadioGroup>

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/calculate_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/calculate_label" />

                <Button
                    android:id="@+id/clear_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/clear_label" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>
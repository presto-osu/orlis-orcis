<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
         >

            <TextView
                style="@style/Header1"
                android:text="@string/major" />

            <CheckBox
                android:id="@+id/cardiac_arrest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cardiac_arrest_label" />

            <CheckBox
                android:id="@+id/spontaneous_vt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/spontaneous_vt_label" />

            <CheckBox
                android:id="@+id/family_hx_sd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/family_hx_sd_label" />

            <CheckBox
                android:id="@+id/unexplained_syncope"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/unexplained_syncope_label" />

            <CheckBox
                android:id="@+id/lv_thickness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lv_thickness_label" />

            <CheckBox
                android:id="@+id/abnormal_exercise_bp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/abnormal_exercise_bp_label" />

            <CheckBox
                android:id="@+id/nonsustained_vt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nonsustained_vt_label" />

            <TextView
                style="@style/Header1"
                android:text="@string/minor" />

            <CheckBox
                android:id="@+id/afb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/afb_label" />

            <CheckBox
                android:id="@+id/myocardial_ischemia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/myocardial_ischemia_label" />

            <CheckBox
                android:id="@+id/lv_outflow_obstruction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lv_outflow_obstruction_label" />

            <CheckBox
                android:id="@+id/high_risk_mutation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/high_risk_mutation_label" />

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/calculate_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/calculate_label" />

                <Button
                    android:id="@+id/clear_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/clear_label" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hcm_key" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:text="@string/hcm_reference" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#DD222222"
                android:endColor="#DD111111"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#DD444444" />
            <corners
                android:radius="0dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:startColor="#DD222222"
                android:endColor="#DD111111"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#DD444444" />
            <corners
                android:radius="0dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
               android:startColor="#DD222222"
                android:endColor="#DD111111"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#DD444444" />
            <corners
                android:radius="0dp" />
        </shape>
    </item>
</selector>
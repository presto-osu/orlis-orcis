<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/triple_line_height"
    android:paddingLeft="@dimen/baseline_content_unit"
    android:paddingStart="@dimen/baseline_content_unit"
    android:paddingRight="@dimen/baseline_content_unit"
    android:paddingEnd="@dimen/baseline_content_unit"
    android:background="@drawable/item_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sourceTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:ellipsize="middle"
        android:singleLine="true"
        android:textColor="@color/primaryBlue500"
        android:textSize="@dimen/typography_subhead"
        android:textStyle="bold"
        android:id="@+id/nameTextView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/secondaryText"
        android:textSize="@dimen/typography_body_1"
        android:id="@+id/sourceTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sourceTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:singleLine="true"
        android:textColor="@color/secondaryText"
        android:textSize="@dimen/typography_body_1"
        android:textStyle="italic"
        android:id="@+id/flagTextView" />

</RelativeLayout>
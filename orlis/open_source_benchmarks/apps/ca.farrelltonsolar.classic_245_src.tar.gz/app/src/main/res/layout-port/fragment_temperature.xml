<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/BatTemperatureLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingEnd="5dp"
    android:paddingStart="5dp"
    android:paddingTop="5dp"
    android:weightSum="90">

    <ca.farrelltonsolar.uicomponents.TemperatureGauge
        android:id="@+id/BatTemperature"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="30"
        app:gaugeTitle="@string/BatTemperature"
        app:register="BatTemperature"
        app:showInnerRim="false"
        app:showReading="true" />

    <ca.farrelltonsolar.uicomponents.TemperatureGauge
        android:id="@+id/FETTemperature"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="30"
        app:gaugeTitle="@string/FETTemperature"
        app:register="FETTemperature"
        app:showInnerRim="false"
        app:showReading="true" />

    <ca.farrelltonsolar.uicomponents.TemperatureGauge
        android:id="@+id/PCBTemperature"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="30"
        app:gaugeTitle="@string/PCBTemperature"
        app:register="PCBTemperature"
        app:showInnerRim="false"
        app:showReading="true" />

</LinearLayout>

